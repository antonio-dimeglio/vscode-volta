{
  "name": "vscode-volta",
  "displayName": "vscode-volta",
  "description": "A simple extension for the volta programming language.",
  "version": "0.0.1",
  "icon": "images/volta-icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/client/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "volta",
        "aliases": [
          "Volta",
          "volta"
        ],
        "extensions": [
          ".vlt"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/volta-icon.svg",
          "dark": "./images/volta-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "volta",
        "scopeName": "source.volta",
        "path": "./syntaxes/volta.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "volta",
        "path": "./snippets/volta.json"
      }
    ],
    "configuration": {
      "title": "Volta",
      "properties": {
        "volta.compilerPath": {
          "type": "string",
          "default": "volta",
          "description": "Path to the Volta compiler executable. Leave as 'volta' to search PATH, or provide an absolute path."
        },
        "volta.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "esbuild-base": "esbuild ./src/client/extension.ts ./src/server/server.ts --bundle --outdir=dist --external:vscode --format=cjs --platform=node",
    "lint": "eslint ./src --ext .ts",
    "pretest": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonio-dimeglio/vscode-volta.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/antonio-dimeglio/vscode-volta/issues"
  },
  "homepage": "https://github.com/antonio-dimeglio/vscode-volta#readme",
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.3"
  }
}
